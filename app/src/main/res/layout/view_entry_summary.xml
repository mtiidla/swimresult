<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/entrySummaryLabelView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_8"
        android:textAppearance="@style/TextAppearance.S14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/entrySummaryTimeView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Timed final" />

    <TextView
        android:id="@+id/entrySummaryTitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.S14.Bold"
        app:layout_constraintLeft_toLeftOf="@id/entrySummaryLabelView"
        app:layout_constraintRight_toRightOf="@+id/entrySummaryLabelView"
        app:layout_constraintTop_toBottomOf="@id/entrySummaryLabelView"
        tools:text="101. Girls, 50m Freestyle" />

    <TextView
        android:id="@+id/entrySummarySubtitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.S12"
        app:layout_constraintLeft_toLeftOf="@id/entrySummaryLabelView"
        app:layout_constraintRight_toRightOf="@+id/entrySummaryLabelView"
        app:layout_constraintTop_toBottomOf="@id/entrySummaryTitleView"
        tools:text="Heat 1, Lane 1" />

    <TextView
        android:id="@+id/entrySummaryTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:hint="0:00:00"
        android:textAppearance="@style/TextAppearance.S14"
        app:layout_constraintBaseline_toBaselineOf="@id/entrySummaryTitleView"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText"
        tools:text="15:20:34" />

</merge>