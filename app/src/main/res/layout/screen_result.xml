<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_8">

        <TextView
            android:id="@+id/resultCompetitorView"
            android:textAppearance="@style/TextAppearance.S20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ee.mtiidla.swimresult.ui.result.LabelValueView
            android:id="@+id/resultEventView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            app:lv_label="Event" />

        <ee.mtiidla.swimresult.ui.result.LabelValueView
            android:id="@+id/resultHeatLaneView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            app:lv_label="Entry" />

        <ee.mtiidla.swimresult.ui.result.LabelValueView
            android:id="@+id/resultEntryTimeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            app:lv_label="Entry time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_16"
            android:text="@string/athlete_results_header"
            android:textAppearance="@style/TextAppearance.S14.Bold" />

        <ee.mtiidla.swimresult.ui.result.LabelValueView
            android:id="@+id/resultPlaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            app:lv_label="Place" />

        <ee.mtiidla.swimresult.ui.result.LabelValueView
            android:id="@+id/resultTimeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            app:lv_label="Swim time" />

        <ee.mtiidla.swimresult.ui.result.LabelValueView
            android:id="@+id/resultDiffTimeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            app:lv_label="Difference" />

        <ee.mtiidla.swimresult.ui.result.LabelValueView
            android:id="@+id/resultInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            app:lv_label="Info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_16"
            android:text="Splits"
            android:textAppearance="@style/TextAppearance.S14.Bold" />

        <LinearLayout
            android:id="@+id/resultSplitView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>