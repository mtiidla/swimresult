<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_16"
    android:paddingTop="@dimen/spacing_12"
    android:paddingRight="@dimen/spacing_16"
    android:paddingBottom="@dimen/spacing_12">

    <TextView
        android:id="@+id/meetTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.S16"
        tools:text="World Championships 2018" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meetStatusView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_swimming_figure" />

        <TextView
            android:id="@+id/meetSubtitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_8"
            android:textAppearance="@style/TextAppearance.S14"
            android:textColor="@color/secondary_text"
            tools:text="\@ China, 10.12.2018-14.12.2018" />

    </LinearLayout>

</LinearLayout>